<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.PasswordField?>

<VBox alignment="center" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.121" fx:controller="java2.chat.client.JFXController">
    <HBox fx:id="upperPanel">
        <HBox>
            <VBox>
                <TextField fx:id="textFieldServer" promptText="Сервер"></TextField>
                <TextField fx:id="textFieldPort" promptText="Порт"></TextField>
            </VBox>
        </HBox>
        <HBox>
            <VBox>
                <TextField fx:id="textFieldLogin" HBox.hgrow="ALWAYS" promptText="Логин"></TextField>
                <PasswordField fx:id="textFieldPassword" promptText="Пароль" onAction="#tryToAuth"/>
                <Button text="Авторизоваться" onAction="#tryToAuth"/>
            </VBox>
        </HBox>
    </HBox>
    <TextArea fx:id="textAreaChat" VBox.vgrow="ALWAYS" editable="false" />
    <HBox fx:id="bottomPanel" managed="false" visible="false">
        <Label fx:id="labelNickName"/>
        <TextField fx:id="textFieldMessage" promptText="Введите текст" HBox.hgrow="ALWAYS" />
        <Button fx:id="btn1" text="Send" onAction="#sendMsg" />
    </HBox>
</VBox>
